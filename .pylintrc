[MASTER]
# Add the current directory to the Python path
init-hook='import sys; sys.path.insert(0, ".")'

[MESSAGES CONTROL]
# Disable specific warnings that cause false positives
disable=
    import-error,
    missing-module-docstring,
    too-many-locals,
    too-many-arguments,
    too-many-branches,

[DESIGN]
max-locals=15
max-arguments=8
max-branches=15

[FORMAT]
# Line length (matching Black's default)
max-line-length=88
